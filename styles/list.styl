.todoster
	&__list
		position: absolute
		top: 120px
		right 20px
		left: 20px
		bottom: 100px
		overflow: auto
		overflow-y: scroll

.list
	&__item
		position: relative
		margin: 0 0 -10px
		padding 20px 10px

		&:hover
			background-color #eee

		&--deadline
			.list__item_date
				color red
				font-weight 700

		left-margin = 30px
		right-margin = 50px

		&_body
			margin: 0 right-margin 0 left-margin
			font-family: font--regular
			line-height: 22px
			color: regular
			font-size: 16px

		&_date
			position: relative
			margin: 10px 0 0 left-margin
			font-family: font--small
			font-size: 14px
			line-height: 19px
			&:before
				display: block
				float: left
				margin: 0 10px 0 0
				content: ''
				width: 15px
				height: 18px
				sprite($clock)

		&_done
			display: none

		&_label
			float: left
			width: 20px
			height: 20px
			text-indent: -1000em
			margin: 0 -100% 0 0
			cursor: pointer
			sprite($checkbox)
			&:hover
				sprite($checkbox--hover)
		&_done:checked + &_label
			sprite($checkbox--checked)

		&_done:checked ~ .list__item_body
			text-decoration: line-through

		&_controls
			position: absolute
			top: 20px
			right: 0
			width: 50px

		.controls
			display: block
			border: none
			cursor: pointer
			text-indent: -1000em
			background-color: transparent

			&--delete
				width: 26px
				height: 26px
				display: block
				sprite($delete)
				&:hover
					sprite($delete--hover)
